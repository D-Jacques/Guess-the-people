{% extends "base.html.twig" %}

{% block body %}
    <div class="container mx-auto px-4 mt-4 mb-10">
        <div class="section-title mt-2 mb-20">
            <h1 class="text-3xl"> Gestion des devinettes </h1>
        </div>
        <div class="bg-stone-100 rounded-xl">
            <div class="border-b-2">
                <div class="flex my-3 py-2 px-10">
                    <div class="w-1/2">
                        <h2 class="text-2xl"> Liste des devinettes </h2>
                    </div>

                    <div class="flex w-1/2 justify-center">
                        <a class="bg-purple-500 p-2 rounded-md text-sm text-slate-50 font-bold hover:bg-purple-600" href="{{ path("backoffice_riddle_new") }}">Créer des devinettes</a>
                    </div>
                </div>
            </div>
            <div class="flex">
                <table class="table-auto w-full">
                    <thead>
                        <tr class="border-b-2">
                            <th>Id</th>
                            <th>Nom prénom</th>
                            <th>description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for riddle in riddles %}
                        <tr {% if loop.last != true %}class="border-b-2"{% endif %}>
                            <td class="w-1/12"><p class="flex justify-center">{{ riddle.id }}</p></td>
                            <td class="mx-auto"><p class="flex justify-center">{{ riddle.name}}</p></td>
                            <td class="mx-auto"><p class="pl-20">{{ riddle.description }}</p></td>
                            <td class="mx-auto py-2">
                                <span class="flex justify-around">
                                    <a class="bg-teal-500 p-2 rounded-md text-sm text-slate-50 font-bold hover:bg-teal-600" href="{{ path("backoffice_riddle_edit", { 'riddleCard' : riddle.id} )}}">Editer</a>
                                    <a class="bg-red-500 p-2 rounded-md text-sm text-slate-50 font-bold hover:bg-red-600" href="{{ path("backoffice_riddle_delete", { 'riddleCard' : riddle.id })}}">Supprimer</a>
                                </span>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div> 
    </div>
{% endblock %}