{% extends "base.html.twig" %}

{% block body %}
    <div class="container mx-auto px-4 mt-4">
        <div class="section-title">
            <h1> Gestion des devinettes </h1>
        </div>
        <div class="flex my-3">
            <div class="w-1/2">
                <h2> Liste des devinettes </h2>
            </div>

            <div class="flex w-1/2 justify-center">
                <a href="{{ path("backoffice_riddle_new") }}">Créer des devinettes</a>
            </div>
        </div>
        <div class="flex">
            <table class="table-auto w-full" >
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nom prénom</th>
                        <th>description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for riddle in riddles %}
                    <tr>
                        <td class="w-1/12"><p class="flex justify-center">{{ riddle.id }}</p></td>
                        <td class="mx-auto"><p class="flex justify-center">{{ riddle.name}}</p></td>
                        <td class="mx-auto"><p class="pl-20">{{ riddle.description }}</p></td>
                        <td class="mx-auto">
                            <span class="flex justify-around">
                                <a href="{{ path("backoffice_riddle_edit", { 'riddleCard' : riddle.id} )}}">Editer</a>
                                <a href="{{ path("backoffice_riddle_delete", { 'riddleCard' : riddle.id })}}">Supprimer</a>
                            </span>
                        </td>
                        {# <td class="mx-auto"></td> #}
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}