<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}BackOffice - Login{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('styles/login.css') }}">
        {% endblock %}

        {% block javascripts %}
{% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <main class="">
            {% if errors %}
                <div class="w-1/3 mx-auto text-center bg-red-300 border-2 border-red-600 rounded mt-2 px-2 py-4 text-red-800">{{ errors.messageKey|trans(errors.messageData, 'security') }}</div>
            {% endif %}

            <form class="w-1/2 mx-auto h-screen" action="{{ path('backoffice_login_index') }}" method="POST">
                <div class="bg-stone-100 rounded-xl p-5 w-1/2 mx-auto mt-20">
                    <div class="w-full">
                        <p class="mb-1"><label for="email">Email: </label></p>
                        <input class="rounded py-1 px-1 w-full" type="text" name="email" id="email" value="{{lastUser}}">
                    </div>
                    <div class="w-full mt-3">
                        <p class="mb-1"><label for="password">Password: </label></p>
                        <input class="rounded py-1 px-1 w-full" type="password" name="password" id="password">
                    </div>

                    <input type="hidden" name="_target_path" value="{{ path('backoffice_riddle_list') }}">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    <div class="mt-10">
                        <button type"submit" class="bg-sky-500 p-2 rounded-md text-sm text-slate-50 font-bold hover:bg-sky-600">Se connecter</button>
                    </div>
                </div>
            </form>
        </main>
    </body>
</html>
