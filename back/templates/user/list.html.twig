{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 mt-4">
        <div class="section-title">
            <h1>Gestion des comptes administrateurs</h1>
        </div>
        <div class="flex my-3">
            <div class="w-1/2">
                <h2> Liste des administrateurs </h2>
            </div>

            <div class="flex w-1/2 justify-center">
                <a href="{{ path("backoffice_user_new") }}">Cr√©er des administrateurs</a>
            </div>
        </div>
        <div class="flex">
            <table class="table-auto w-full">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Email</th>
                        <th>Roles</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td class="w-1/12"><p class="flex justify-center">{{ user.id }}</p></td>
                        <td class="mx-auto"><p class="flex justify-center">{{ user.email }}</p></td>
                        <td class="mx-auto"><p class="flex justify-center">{{ user.roles ? user.roles|json_encode : '' }}</p></td>
                        <td class="mx-auto">
                            <span class="flex justify-around">
                                <a href="{{ path('backoffice_user_edit', {'id': user.id}) }}">Editer</a>
                                <a href="{{ path('backoffice_user_delete', {'id': user.id}) }}">Supprimer</a>
                            </span>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
